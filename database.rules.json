{
  "rules": {
    "users": {
        ".read": "data.child('site_admin').val() === true || data.child('sys_admin').val() === true",
        ".write": "data.child('site_admin').val() === true || data.child('sys_admin').val() === true",
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "sites": {
        "$site": {
            "outages": {
                ".indexOn": ["approver","created"],
                "$outage": {
                    ".read": "data.child('Public').val() === true && (data.child('status').val() === 'Sent' || data.child('status').val() === 'Complete')"
                }
            },
            "outage_types": {
              ".read": "true"
            },
            "systems": {
              ".read": "true"
            },
            "contacts": {
              ".read": "true"
            },
            ".read": "$site === root.child('users').child(auth.uid).child('site').val()",
            ".write": "$site === root.child('users').child(auth.uid).child('site').val()"
        }
    }
  }
}